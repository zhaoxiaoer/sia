  <!-- Beginning Spring Demo begin-->
  <servlet>
    <servlet-name>JavaConfigDemo</servlet-name>
    <servlet-class>com.nnniu.bs.ch2.JavaConfigDemo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JavaConfigDemo</servlet-name>
    <url-pattern>/bs/ch2/JavaConfigDemo</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/springmvc-servlet.xml</param-value>
    </init-param>
    <!-- 手动捕获404错误 -->
    <init-param>
      <param-name>throwExceptionIfNoHandlerFound</param-name>
      <param-value>true</param-value>
    </init-param>
    <!-- <init-param>
      <param-name>contextClass</param-name>
      <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </init-param>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>com.nnniu.bs.ch3.AppConfig</param-value>
    </init-param> -->
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <!-- Beginning Spring Demo end -->
  
</web-app>